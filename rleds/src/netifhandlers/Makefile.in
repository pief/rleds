prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

PACKAGE_LIBDIR = ${libdir}/@PACKAGE_TARNAME@/@PACKAGE_VERSION@

CC = @CC@
RANLIB = @RANLIB@

DEFS = @DEFS@
LIBS = @LIBS@

CFLAGS = @CFLAGS@ @DEFS@ -fPIC
LDFLAGS = @LDFLAGS@ -shared -g

###############################################################################

TARGETS = ifh_generic.so

all: $(TARGETS)

ifh_generic.so: ../common/base.h ../common/ifhandlers.h ../common/leds.h ifh_generic.h

%.so: %.o
	$(CC) $(LDFLAGS) -o $@ $<

install:
	mkdir -p $(PACKAGE_LIBDIR)
	cp -a $(TARGETS) $(PACKAGE_LIBDIR)/

clean:
	-rm -rf *.o *.so
