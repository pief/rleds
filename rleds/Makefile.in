prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

PACKAGE_LIBDIR = ${libdir}/@PACKAGE_TARNAME@/@PACKAGE_VERSION@

CC = @CC@
RANLIB = @RANLIB@

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

DEFS = @DEFS@ -DPACKAGE_LIBDIR=\"$(PACKAGE_LIBDIR)\"
LIBS = @LIBS@ -ldl

###############################################################################

SUBDIRS = src/leddrivers src/ifhandlers src/rleds

all:
	@for dir in $(SUBDIRS); do \
	  (cd $$dir; $(MAKE) all); \
	done

install:
	@for dir in $(SUBDIRS); do \
	  (cd $$dir; $(MAKE) install); \
	done

clean:
	@for dir in $(SUBDIRS); do \
	  (cd $$dir; $(MAKE) clean); \
	done

distclean: clean
	@[ -e rleds*.tar.bz2 ] && rm rleds*.tar.bz2 || true
	@find . -name config.\* -a ! -name config.h.in -exec rm {} \; , -name Makefile -exec rm {} \;

###############################################################################

DISTDIR = @PACKAGE_TARNAME@-@PACKAGE_VERSION@

release:
	@SRCDIR=`pwd`; \
	TMPDIR=`mktemp -d /tmp/rleds.XXXX`; \
	cd $${TMPDIR}; \
	mkdir $(DISTDIR); \
	cp -a $${SRCDIR}/* $(DISTDIR)/; \
	cd $(DISTDIR); \
	make distclean; \
	find . -name .svn -type d -exec rm -rf {} +; \
	cd ..; \
	tar cvjf $${SRCDIR}/$(DISTDIR).tar.bz2 $(DISTDIR); \
	cd $${SRCDIR}; \
	rm -rf $${TMPDIR}

