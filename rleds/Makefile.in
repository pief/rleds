PACKAGE_NAME = @PACKAGE_NAME@
PACKAGE_VERSION = @PACKAGE_VERSION@

CC = @CC@
CFLAGS = @CFLAGS@ -DPACKAGE_NAME=\"$(PACKAGE_NAME)\" -DPACKAGE_VERSION=\"$(PACKAGE_VERSION)\"

all: rleds

rleds.o: rleds.h

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	-rm -rf *.o rleds

release: all
	@[ -f rleds-$(PACKAGE_VERSION).tar.bz2 ] && rm rleds-$(PACKAGE_VERSION).tar.bz2
	tar cvjf rleds-$(PACKAGE_VERSION).tar.bz2 rleds *.c README
